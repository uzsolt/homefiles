conky.config = {
	alignment = 'top_left',
	background = false,
	cpu_avg_samples = 1,
	double_buffer = true,
	gap_x = 59,
	gap_y = 0,
	net_avg_samples = 2,
	out_to_console = false,
	update_interval = 1,
	minimum_width = 1340, minimum_height = 13,
	maximum_width = 1340,
    use_xft=true,
	own_window = true,
	own_window_type = 'dock',
	own_window_colour = 'black',
	own_window_transparent = false,
	own_window_hints = 'undecorated,sticky,skip_taskbar,skip_pager',

	text_buffer_size = 512,

	template0 = [[ ${execi 30 /home/zsolt/.fluxbox/external/conky-count.sh \2 \1}]],
	template1 = [[ ${if_match \1>\3}${color red}${else}${if_match \1 > \2}${color yellow}${else}${color gray}${endif}${endif}]],

	font = 'terminus:size=8',

	default_bar_width = 25, default_bar_height = 2,

	top_name_width = 10,

};

conky.text = [=[
${template1 ${freq} 700 1200}${freq}MHz\
${goto 50}\
${template1 ${acpitemp} 75 77}${acpitemp}C\
${goto 70}\
${template1 ${cpu} 50 80}${cpu}%\
${goto 90}\
${color grey}${cpugraph 10,30 00ff00 ff0000 -t}\
${goto 130}\
${if_match ${loadavg 1}>1.1}${color red}${else}${if_match ${loadavg 1}>0.7}${color yellow}${else}${color gray}${endif}${endif}${loadavg 1}\
${goto 200}\
${color lightblue}${downspeedf wlan0}\
${goto 230}\
${color lightblue}${downspeedgraph wlan0 10,30 00ff00 ff0000 1000 -t}\
${goto 265}\
${color lightblue}${upspeedf wlan0}\
${goto 290}\
${color lightblue}${upspeedgraph wlan0 10,30 00ff00 ff0000 100 -t}\
${goto 330}\
${uptime_short}\
${goto 375}\
${color gray}${template0 M /home/zsolt/logfiles/gmail-unread-count}\
${goto 400}\
${color gray}${template0 R /home/zsolt/logfiles/newsbeuter-unread-items}\
${goto 430}\
${if_match ${swapperc}>0}${color red}|Sw:${swapperc}%|${else}\
${endif}\
${goto 460}\
${if_match ${top cpu 1}>20.0}${color red}${top name 1}\
${top cpu 1}% ${endif}\
${goto 565}\
${color lightblue}\
${mixerbar}${voffset 5}${offset -25}${mixerbar pcm}\
${voffset -3}${offset 5}\
${if_mpd_playing}\
${color lightblue}\
${if_match "${mpd_status}" == "Paused" }[[ paused ]]${else}${scroll 35 2 ${mpd_smart}}${endif}\
${goto 840}\
${mpd_bar 5,40}\
${goto 895}\
${mpd_elapsed}/${mpd_length}\
${endif}\
${goto 1100}\
${if_match "${acpiacadapter}" == "Running on battery"}${image /home/zsolt/wallpapers/icons/ec_warn.jpg -p 1050,0}${endif}\
${color red} ${template0 S /home/zsolt/logfiles/task1}\
${color yellow} ${template0 T /home/zsolt/logfiles/task2}\
]=];
